@using MyEverNote.WebApp
@model IEnumerable<MyEverNote.Entities.Category>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h3>Kategoriler</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <p>
            <a href="/Category/Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create
            </a>       
        </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modifiedon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedUsername)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modifiedon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedUsername)
                </td>
                <td>
                    @MyBootstrap.LinkButton("/Category/Details/"+ item.Id ,"info","btn-sm","Details",
                   "info-circle"," Details")

                    @MyBootstrap.LinkButton("/Category/Edit/"+ item.Id, "warning","btn-sm","Edit",
                  "edit"," Edit")

                    @MyBootstrap.LinkButton("/Category/Delete/" + item.Id, "danger","btn-sm","Delete",
                    "trash"," Delete")

                </td>
            </tr>
        }

    </table>
    </div>
</div>